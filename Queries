MATCH (b:Business {ID: '_ab50qdWOk0DdB6XOrBitw'})-[:for_biz]-(r:Review)-[:gave]-(u:User)
  WHERE r.Stars=5.0
RETURN DISTINCT u.ID, u.Name, count(r) ORDER BY count(r) DESC LIMIT 10

